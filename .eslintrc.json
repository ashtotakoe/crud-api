{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": [
    "prettier",
    "plugin:@typescript-eslint/strict",
    "plugin:@typescript-eslint/recommended",
    "eslint:recommended"
  ],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier", "@typescript-eslint"],
  "rules": {
    "indent": ["error", 4],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"]
  }
}
